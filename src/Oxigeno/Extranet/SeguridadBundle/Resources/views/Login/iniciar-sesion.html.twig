{% extends '::login.html.twig' %}

{% block title %}Área de acceso{% endblock %}
{% block id 'login' %}

{% block body %}
    <article>
        <section id="contenido">
            <div>
                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}
            </div>
            <div class="login-inicio-sesion">
                <form action="{{ path('seguridad_login_check') }}" method="post">
                    <h3>Bienvenido al área de acceso de Oxígeno</h3>
                    <fieldset>
                        <div>
                            <label for="username">Usuario:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div>
                            <label for="password">Contraseña:</label>
                            <input type="password" id="password" name="_password" required="required" />
                        </div>
                    </fieldset>
                    <div class="login-alinear-centro-1">
                        <div>
                            <input type="checkbox" id="mantenme-conectado"/>
                            <label for="mantenme-conectado">Mantenerme conectado</label>
                        </div>
                        <div>
                            <a href="{{ path('seguridad_solicitar_restablecer_password') }}">¿Olvidó su contaseña?</a>
                        </div>
                        <div class="login-alinear-centro-2">
                            <input class="boton" type="submit" name="login" value="Acceder" />
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </article>
{% endblock %}