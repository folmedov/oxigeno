{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/login/css/normalizar.css') }}" 
          rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/login/css/login.css') }}" 
          rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}Área de acceso{% endblock %}
{% block id 'login' %}
    
{% block body %}
    <article>
        <section id="contenido">
            <form  method="post">

                <table>
                    <thead>
                        <tr><th><h2>Bienvenido al área de acceso a Oxígeno</h2></th></tr>
                    </thead>
                    <tbody>
                        <tr class="spaceUper">
                            <td><label for="username">Usuario:</label></td>
                        </tr>
                        <tr>
                            <td><input type="text" id="username" name="_username" /></td>
                        </tr>
                        <tr class="spaceUper2">
                            <td><label for="password">Contraseña:</label></td>
                        </tr>
                        <tr>
                            <td><input type="password" id="password" name="_password" /></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr class="spaceUper">
                            <td>
                                <input type="checkbox" id="mantenme-conectado"/>
                                <label for="mantenme-conectado">
                                    Mantenerme conectado
                                </label>
                            </td>
                        </tr>
                        <tr class="spaceUper2 spaceUnder">
                            <td><a href="#">¿Olvidó su contaseña?</a></td>
                        </tr>
                        <tr>
                            <td><input class="button_example" type="submit" name="login" value="Acceder" /></td>
                        </tr>
                    </tfoot>
                </table>
            </form>
        </section>
    </article>
{% endblock %}